{
  "name": "django-pain-js",
  "version": "0.1.0",
  "description": "JavaScript for django-pain",
  "author": "Jan MusÃ­lek <jan.musilek@nic.cz>",
  "license": "GPL-3.0",
  "scripts": {
    "check": "eslint django_pain/tests-js django_pain/static/django_pain/js/es6",
    "build": "webpack",
    "watch": "webpack-dev-server --watch",
    "test": "ava",
    "test-coverage": "nyc ava"
  },
  "devDependencies": {
    "ajv": "^5.0.0",
    "ava": "^0.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "browser-env": "^3.2.4",
    "eslint": "^4.12.0",
    "fetch-mock": "^6.5.2",
    "mock-location": "^0.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "^12.0.2",
    "postcss-sass": "^0.3.2",
    "postcss-syntax": ">=0.28.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.4"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "ignore": "django_pain/tests-js/**/*.js"
  },
  "ava": {
    "files": [
      "django_pain/tests-js/*.js"
    ],
    "source": [
      "django_pain/static/django_pain/js/es6/*.js"
    ],
    "concurrency": 8,
    "require": [
      "babel-register",
      "babel-polyfill",
      "./django_pain/tests-js/helpers/setup-browser-env.js"
    ]
  },
  "nyc": {
    "include": [
      "django_pain/static/django_pain/js/es6/**/*.js",
      "django_pain/tests-js/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  }
}
